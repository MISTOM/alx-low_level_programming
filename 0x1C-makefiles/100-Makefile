#Variables
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:%.c=%.o)
NAME = school
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic

#Rules - Recompile only updated source files

.PHONY: all clean oclean re
#%.o: %.c
#	$(CC) $(CFLAGS) -c $< -o $@

all: m.h $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) -f *~ $(NAME)

oclean:
	$(RM) -f $(OBJ)

fclean: clean oclean

re: oclean all
